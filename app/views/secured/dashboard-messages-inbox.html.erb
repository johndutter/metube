<table class='table table-striped'>
  <tr> 
    <th> Messages </th>
  </tr>
  <tr ng-repeat='message in messages'>
    <td> <a class='mail' ng-class='{unread: message.unread}' ng-href='/dashboard/messages/view/{{message.id}}'> {{message.subject}} </a> <a class='pull-right' ng-click='confirmDeleteMessage(message.id,$index)'><span class='glyphicon glyphicon-trash'> </span></a></td>
  </tr>
</table>