<div class='buffer-30'></div>

<div class='row'>
  <div class='col-3'>
  </div>

  <div class='col-6'>
    <div class='well well-lg'>
      <h2>Sign Up</h2>
      <div class='buffer-30'></div>

      <form novalidate class='form-horizontal' role='form'  name='signupform' ng-submit='signUp()'>

        <div class='form-group'>
          <label class='col-5 control-label' for='email'>email</label>
          <div class='col-7'>
            <input id='email' class='form-control' type='email' name='email' ng-model='formData.email' required>
            <p class='error-helper text-danger' ng-show='signupform.email.$error.required && showErrors'>please enter an email address</p>
            <p class='error-helper text-danger' ng-show='signupform.email.$error.email && !signupform.email.$error.required && showErrors'>invalid email address</p>
          </div>
        </div>

        <div class='form-group'>
          <label class='col-5 control-label' for='username'>username</label>
          <div class='col-7'>
            <input id='username' class='form-control' type='text' name='username' ng-model='formData.username' required ng-maxlength='21'>
            <p class='error-helper text-danger' ng-show='signupform.username.$error.required && showErrors'>please enter an email address</p>
            <p class='error-helper text-danger' ng-show='signupform.username.$error.maxlength && !signupform.username.$error.required && showErrors'>please limit to 21 characters</p>
          </div>
        </div>

        <div class='form-group'>
          <label class='col-5 control-label' for='encrypted_password'>password</label>
          <div class='col-7'>
            <input id='encrypted_password' class='form-control' type='password' name='encrypted_password' ng-model='formData.encrypted_password' required ng-minlength='6'>
            <p class='error-helper text-danger' ng-show='signupform.encrypted_password.$error.required && showErrors'>please choose a password</p>
            <p class='error-helper text-danger' ng-show='signupform.encrypted_password.$error.minlength && !signupform.encrypted_password.$error.required && showErrors'>password must be at least 6 characters</p>
          </div>
        </div>

        <div class='form-group'>
          <label class='col-5 control-label' for='password_confirmation'>confirm password</label>
          <div class='col-7'>
            <input id='password_confirmation' class='form-control' type='password' name='password_confirmation' ng-model='formData.password_confirmation' required ng-minlength='6'>
            <p class='error-helper text-danger' ng-show='signupform.password_confirmation.$error.required && showErrors'>please re-type password</p>
            <p class='error-helper text-danger' ng-show='signupform.password_confirmation.$error.minlength && !signupform.password_confirmation.$error.required && showErrors'>password must be at least 6 characters</p>
          </div>
        </div>

        <div class='text-danger text-center' ng-show='formData.encrypted_password !== formData.password_confirmation && showErrors'>your passwords must match</div>
        <div class='text-danger text-center'>{{errorMessage}}</div>

        <div class='buffer-30'></div>

        <button class='btn btn-primary btn-lg btn-block' type='submit'>sign up</button>

      </form>

    </div>
  </div>

  <div class='col-3'></div>
</div>