<div class="panel panel-default">
  <div class="panel-body">
    <h1 class='main-title'>{{$parent.tab}}</h1>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <h2>Popular</h2>
    <div class='mult-area clearfix'>
      <span class='chevron glyphicon glyphicon-chevron-left pull-left' ng-click='movePopular("left");' ng-class='{chevdisabled: popular.offset==0}'></span>
      <div class='row'>
        <div ng-repeat='file in popularTabs' class='col-4'>
          <a ui-sref='multimedia.sidebar({id: file.id})' class='thumbnail'>
            <img ng-src='{{file.thumbnail_path}}' width='200' height='120' alt='{{file.title}}'></img>
            {{file.title}}
          </a>
        </div>
      </div>
      <span class='chevron glyphicon glyphicon-chevron-right pull-right' ng-click='movePopular("right");'></span>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <h2>Most Recent</h2>
    <div class='mult-area clearfix'>
      <span class='chevron glyphicon glyphicon-chevron-left pull-left' ng-click='moveRecent("left");' ng-class='{chevdisabled: recent.offset==0}'></span>
      <div class='row'>
        <div ng-repeat='file in recentTabs' class='col-4'>
          <a ui-sref='multimedia.sidebar({id: file.id})' class='thumbnail'>
            <img ng-src='{{file.thumbnail_path}}' width='200' height='120' alt='{{file.title}}'></img>
            {{file.title}}
          </a>
        </div>
      </div>
      <span class='chevron glyphicon glyphicon-chevron-right pull-right' ng-click='moveRecent("right");'></span>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <h2>Browse</h2>
    <div class='mult-area clearfix'>
      <span class='chevron glyphicon glyphicon-chevron-left pull-left' ng-click='moveBrowse("left");' ng-class='{chevdisabled: browse.offset==0}'></span>
      <div class='row'>
        <div ng-repeat='file in browseTabs' class='col-4'>
          <a ui-sref='multimedia.sidebar({id: file.id})' class='thumbnail'>
            <img ng-src='{{file.thumbnail_path}}' width='200' height='120' alt='{{file.title}}'></img>
            {{file.title}}
          </a>

        </div>
      </div>
      <span class='chevron glyphicon glyphicon-chevron-right pull-right' ng-click='moveBrowse("right");'></span>
    </div>
  </div>
</div>
