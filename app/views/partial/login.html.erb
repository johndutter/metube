<div class='buffer-30'></div>

<div class='row'>
  <div class='col-3'>
  </div>

  <div class='col-6'>
    <div class='well well-lg'>
      <h2>Log In</h2>
      <div class='buffer-30'></div>

      <form novalidate class='form-horizontal' role='form' name='loginform' ng-submit='login()'>

        <div class='form-group'>
          <label class='col-5 control-label' for='username'>username</label>
          <div class='col-7'>
            <input id='username' class='form-control' name='username' type='text', ng-model='formData.username' required>
            <p class='error-helper text-danger' ng-show='loginform.username.$error.required && showErrors'>please enter your username</p>
          </div>
        </div>

        <div class='form-group'>
          <label class='col-5 control-label' for='password'>password</label>
          <div class='col-7'>
            <input id='password' class='form-control' name='password' type='password', ng-model='formData.password' required>
            <p class='error-helper text-danger' ng-show='loginform.password.$error.required && showErrors'>please enter your password</p>
          </div>
        </div>

        <div class='text-danger text-center'>{{errorMessage}}</div>

        <div class='buffer-30'></div>

        <button class='btn btn-primary btn-lg btn-block' type='submit'>log in</button>

      </form>

    </div>
  </div>

  <div class='col-3'></div>
</div>